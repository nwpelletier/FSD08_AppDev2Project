@page "{id:int}"
@model FSD08_AppDev2Project.Pages.AddHiringManagerModel
@using FSD08_AppDev2Project.Data

<form method="post">
    <input type="hidden" name="CompanyId" value="@Model.CompanyId" />
    
    <label for="selectedUserIds">Select Hiring Managers:</label>
    <select multiple class="form-control" id="selectedUserIds" name="selectedUserIds">
        @foreach (var hiringManager in Model.HiringManagers)
        {
            <option value="@hiringManager.Id">@hiringManager.UserName</option>
        }
    </select>

    <button type="submit" class="btn btn-primary">Add Hiring Managers</button>
</form>
