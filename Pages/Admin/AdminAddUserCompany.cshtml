@page
@model FSD08_AppDev2Project.Pages.Admin.AdminAddUserCompanyModel
@{
    ViewData["Title"] = "Add User to Company";
}

<h2>Add User to Company</h2>

<form method="post">
    <div class="form-group">
        <label for="UserId">User:</label>
        <input asp-for="UserId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="CompanyId">Select Company:</label>
        <select asp-for="CompanyId" class="form-control" asp-items="@Model.Companies"></select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

